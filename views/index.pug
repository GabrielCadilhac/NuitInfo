doctype html
html(lang=fr)
  head
    title Fichier
    meta(charset="UTF-8")
    script(src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous") 
    script(src="/views/script.js") 
    
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    link(rel='stylesheet', href='/views/index.css', type='text/css')

div.container
    div(class = "row-justify-content-start")
        div(class = "Ensemble-fréquent col-4 container")
            
            t Ensemble fréquent
            div(class="row row-cols-4")
             each fichier in ListeFile
                div(class="fichier col border border-primary")
                    img(src="/views/image.svg") 
                    
                    p #{fichier.nom}

           
    div(class = "row-justify-content-center")
        div(class = "Ensemble-moyen col-4 container")
            t Ensemble moyen
            div(class="row row-cols-4")
             each fichier in ListeFile
                div(class="fichier col border border-primary")
                    img(src="/views/image.svg") 
                    
                    p #{fichier.nom}
    div(class = "row-align-items-end")
        div(class = "Ensemble-petit col-4 container")
            t Ensemble petit
            div(class="row row-cols-2")
             each fichier in ListeFile
                div(class="fichier col border border-primary")
                    img(src="/views/image.svg") 
                    p #{fichier.nom}
    
